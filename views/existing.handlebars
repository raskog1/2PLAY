<!-- Wrapper for rate, search results, search -->
<div class="flex-container wrapper">
  <!-- Div for rating section -->
  <div class="pendingRating">
    <div class="pilot" data-user="pilot">
      <!-- Pilot name/songs will be dynamically populated here -->
    </div>
    <div class="coPilot" data-user="coPilot">
      <!-- Copilot name/songs will be dynamically populated here -->
    </div>
  </div>

  <!-- Div for search results -->
  <div class="results">
    <h3 class="directions" style="padding: 80px;">Search for a song to suggest by using the search function.</h3>
  </div>

  <!-- Div for search bar -->
  <div class="searchbar">
    <form class="login">
      <div class="form-group">
        <h4><label for="songSearchInput">Song Title</label></h4>
        <input type="text" class="form-control" id="songSearchInput" placeholder="What song are you looking for?" />
      </div>
      <div class="form-group">
        <h4><label for="artistSearchInput">Artist Name</label></h4>
        <input type="text" class="form-control" id="artistSearchInput" placeholder="Artist" />
      </div>
      <div class="container vertical-center searchButtonContainer">
        <button id="search" type="submit" class="btn loginButton">
          <svg width="180px" height="60px" viewBox="0 0 180 60" class="border">
            <polyline points="179,1 179,59 1,59 1,1 179,1" class="bg-line" />
            <polyline points="179,1 179,59 1,59 1,1 179,1" class="hl-line" />
          </svg>
          <span>Search</span>
        </button>
      </div>
    </form>
  </div>
</div>

